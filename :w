class SearchesController < ApplicationController
  before_action :require_params
  before_action :prepare_name

  def show
    @player = Player.internal_name(params[:name])
    redirect_to player_path(id: @player.summoner_id)
  end

  private

  def require_params
    params.require(:name)
    params.require(:region)
  end

  def prepare_name
    params[:name] = params[:name].downcase.gsub(/\s+/, '')
  end
end
